<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MyTheme">
  </style>

  <style name="MyTheme.NoActionBar" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>
  <style name="MyTheme.Chat"
         parent="MyTheme.NoActionBar">
    <item name="android:editTextStyle">@style/CustomEditTextStyle</item>
  </style>
  <style name="CustomEditTextStyle">
    <item name="android:imeOptions">actionSend</item>
  </style>
</resources>
