<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SealOrder.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SealOrder.Views.MainView"
             x:DataType="vm:MainViewModel"
             Loaded='Load'
             Unloaded='Unload'>
            <DockPanel>
              <Menu DockPanel.Dock='Top'>
                <MenuItem Header="菜单">
                  <MenuItem Header="关于" Click='About' />
                  <MenuItem Header="加密" Click='Encrypt' />
                  <MenuItem Header="解密" Click='Decrypt' />
                  <MenuItem Header="导入通行等级" StaysOpenOnClick="True">
                    <TextBox LostFocus='Loading' Watermark='关闭菜单以保存' />
                  </MenuItem>
                </MenuItem>
              </Menu>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width='2*' />
                  <ColumnDefinition Width='*' />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column='1' Text='114!' />
              </Grid>
            </DockPanel>
</UserControl>
