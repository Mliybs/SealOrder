<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SealOrder.ViewModels"
             xmlns:views="clr-namespace:SealOrder.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SealOrder.Views.MainView"
             x:DataType="vm:MainViewModel"
             Loaded='Load'
             Background='#111'>
            <DockPanel Name='Root'>
              <Border DockPanel.Dock='Top'
                BorderBrush="Black"
                BorderThickness="2">
                <Menu>
                  <MenuItem Header="菜单">
                    <MenuItem Header="关于" Click='About' />
                    <MenuItem Header="加密" Click='Encrypt' />
                    <MenuItem Header="解密" Click='Decrypt' />
                    <MenuItem Header="导入通行等级" Click="Loading" />
                  </MenuItem>
                </Menu>
              </Border>
              
              <Grid
                DockPanel.Dock='Bottom'
                Background='#111'>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.Styles>
                  <Style Selector='RadioButton'>
                    <Setter Property='FontSize' Value='30' />
                    <Setter Property='Height' Value='60' />
                    <Setter Property='HorizontalAlignment' Value='Stretch' />
                    <Setter Property='Background' Value='{Binding $parent[Grid].Background}' />
                    <Setter Property='Template'>
                      <Setter.Value>
                        <ControlTemplate>
                          <Panel
                            Background='{TemplateBinding Background}'>
                            <TextBlock
                              HorizontalAlignment='Center'
                              VerticalAlignment='Center'
                              Text='{TemplateBinding Content}' />
                          </Panel>
                        </ControlTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>

                  <Style Selector='RadioButton'>
                    <Setter Property='Foreground' Value='#C5C5C5' />
                  </Style>
                  <Style Selector='RadioButton:checked'>
                    <Setter Property='Foreground' Value='#164CFF' />
                  </Style>
                </Grid.Styles>

                <RadioButton
                  Grid.Column='0'
                  GroupName='BottomMenu'
                  Content='聊天'
                  Name='Chat'
                  IsChecked='True'/>
                <RadioButton
                  Grid.Column='1'
                  GroupName='BottomMenu'
                  Content='设置'
                  Name='Settings'/>
              </Grid>
              <views:ChatView />
            </DockPanel>
</UserControl>
